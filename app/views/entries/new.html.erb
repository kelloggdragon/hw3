<h1>New Entry for <%= @place.name %></h1>

<form action="/entries" method="post">
  <input type="hidden" name="entry[place_id]" value="<%= @entry.place_id %>">
  
  <div>
    <label for="title">Title</label>
    <input type="text" name="entry[title]" id="title">
  </div>
  
  <div>
    <label for="description">Description</label>
    <textarea name="entry[description]" id="description"></textarea>
  </div>
  
  <div>
    <label for="occurred_on">Date</label>
    <input type="date" name="entry[occurred_on]" id="occurred_on">
  </div>
  
  <button type="submit">Create Entry</button>
</form>

<p>
  <a href="/places/<%= @place.id %>">Back to Place</a>
</p>
